<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.soundit"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10" 
        android:targetSdkVersion="15" />
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
 	<uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChooesASound"
            android:label="@string/title_activity_chooes_asound" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.soundit.MainActivity" />
        </activity>
        <activity
            android:name=".Recording"
            android:label="@string/title_activity_recording" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SendFriend"
            android:label="@string/title_activity_send_friend" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.soundit.MainActivity" />
        </activity>
        <activity
            android:name=".FriendList"
            android:label="@string/title_activity_friend_list" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.soundit.MainActivity" />
        </activity>
        <activity
            android:name=".ChooseAFriend"
            android:label="@string/title_activity_choose_afriend" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.soundit.MainActivity" />
        </activity>
        <activity
            android:name=".GuessSoundPage"
            android:label="@string/title_activity_guess_sound_page" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.soundit.MainActivity" />
        </activity>
    </application>

</manifest>